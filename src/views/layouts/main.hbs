<!--Indica la versión de HTML que se usó para escribir el documento e idioma.-->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--titulo de la pagina web-->
    <title>Iniciar Sesion</title>
    <!-- Tailwind CSS Link -->
    <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">
    <!-- Fontawesome Link -->
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>
  <!--caracteristicas de la pagina web-->
  <body class="bg-gray-200">
    <!--color del encabezado-->
    <nav class="flex py-2 bg-yellow-900 text-white px-0">
      <div class="w-1/2 px-12 mr-auto">
      <!--titulo del encabezado-->
        <h1 class="text-2xl py-3 font-bold">Metta Cafetery</h1>
      </div>
      <!--Imagen del encabezado-->
      <img class="img-fluid" src="https://cdn-icons-png.flaticon.com/512/2734/2734039.png" width="80px" height="80px" />
      <ul class="w-1/2 px-1 ml-auto flex justify-end pt-1">
      <!--si el nombre es correcto apareceran los siguientes 3 botones -->
        {{#if name}}
          <li class="nav-item px-4">
            <!--boton que re dirige al login-->
            <a href="/carrito" class="text-white hover:text-black nav-link font-semibold border-2 border-white hover:bg-yellow-800 py-3 px-4 rounded-pill">Carrito</a>
          </li>
          <li class="nav-item px-4">
            <!--boton que re dirige al login-->
            <a href="/login" class="text-white hover:text-black nav-link font-semibold border-2 border-white hover:bg-yellow-800 py-3 px-4 rounded-pill">Menú</a>

          </li>
          <li class="nav-item px-4">
            <!--boton que cierra sesion-->
            <a href="/logout" class="text-white hover:text-black nav-link font-semibold border-2 border-white hover:bg-yellow-800 py-3 px-4 rounded-pill">Logout</a>
          </li>
          <!--<img class="img-fluid" src="https://cdn.icon-icons.com/icons2/2483/PNG/512/user_icon_149851.png" width="60px" height="60px" />-->
          <i class="fas fa-user-circle fa-lg text-white px-2 py-1"  style="color: #ffffff;" width="50" height="50"></i>
          <h6><font size="3" color="white" >{{name}}</font></h6>
          <!--si no es correcto se mostrara el siguiente boton-->
        {{else}}
          <li class="nav-item px-4">
            <!--boton que re dirige al login-->
            <a href="/login" class="text-white hover:text-black nav-link font-semibold border-2 border-white hover:bg-yellow-800 py-3 px-4 rounded-pill">Menu</a>

          </li>

        {{/if}}
      </ul>
    </nav>
    {{{body}}}
    <!--se cierran las etiquetas-->
  </body>
</html>